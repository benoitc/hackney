%%{erl_first_files, ["hackney_pool_handler"]}.
{erl_opts, [
  debug_info,
  {platform_define, "R14", no_callback_support},
  {platform_define, "R14", no_ssl_validation},
  {platform_define, "15", no_ssl_validation},
  {platform_define, "17.3.0", no_ssl_validation},
  {platform_define, "17.3.1", no_ssl_validation}
]}.

{xref_checks, [undefined_function_calls]}.

{cover_enabled, true}.
{eunit_opts, [verbose]}.

{clean_files, ["*~","*/*~","*/*.xfm","test/*.beam"]}.

{deps, [
        {idna, ".*",
         {git, "https://github.com/benoitc/erlang-idna",
          {tag, "1.0.1"}}},

        {ssl_verify_hostname, ".*",
         {git, "https://github.com/benoitc/ssl_verify_hostname",
          {tag, "1.0.0"}}}
]}.

{require_otp_vsn, "R14|R15|R16|17"}.
