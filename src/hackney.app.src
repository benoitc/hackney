%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

{application, hackney,
  [
    {description, "simple HTTP client"},
    {vsn, "1.9.0"},
    {registered, [hackney_pool]},
    {applications, [kernel,
      stdlib,
      crypto,
      asn1,
      public_key,
      ssl,
      idna,
      mimerl,
      certifi,
      ssl_verify_fun,
      metrics]},
    {included_applications, []},
    {mod, { hackney_app, []}},
    {env, [{timeout, 150000},
      {max_connections, 50},
      {restart, permanent},
      {shutdown, 10000},
      {maxr, 10},
      {maxt, 1}]},

    {maintainers,
      ["Benoit Chesneau",
        "Eduardo Gurgel"
      ]},
    {licenses, ["Apache 2.0"]},
    {links, [{"Github", "https://github.com/benoitc/hackney"}]},
    {files, [
      "src",
      "include",
      "rebar.config",
      "rebar.lock",
      "README.md",
      "NEWS.md",
      "LICENSE",
      "NOTICE",
      "MAINTAINERS"]}
  ]
}.
